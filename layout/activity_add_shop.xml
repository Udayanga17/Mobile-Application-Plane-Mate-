<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Shop Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Name"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_shopName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter shop name"
        android:inputType="text"/>

    <!-- Shop Category -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Category"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_shopCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter shop category"
        android:inputType="text"/>

    <!-- Shop Image -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Image"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_shopImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter shop image URL"
        android:inputType="text"/>

    <!-- Event Type -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Type"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_eventType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter event type"
        android:inputType="text"/>

    <!-- Add Shop Button -->
    <Button
        android:id="@+id/btn_addShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Shop"
        android:layout_marginTop="24dp"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"/>
</LinearLayout>