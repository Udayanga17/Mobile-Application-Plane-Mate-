<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Seller Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller Name"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_sellerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter seller name"
        android:inputType="text"/>

    <!-- Seller Phone -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller Phone"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_sellerPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter seller phone"
        android:inputType="phone"/>

    <!-- Seller Password -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller Password"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_sellerPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter seller password"
        android:inputType="textPassword"/>

    <!-- Seller Category -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller Category"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_sellerCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter seller category"
        android:inputType="text"/>

    <!-- Add Seller Button -->
    <Button
        android:id="@+id/btn_addSeller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Seller"
        android:layout_marginTop="24dp"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"/>
</LinearLayout>